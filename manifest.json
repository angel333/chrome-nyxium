{
	"manifest_version": 2,
	"name": "Nyxium",
	"version": "1.0.4",
	"description": "Nyx.cz notifier for Google Chrome",
	"icons": {
		"16": "logo.png",
		"48": "logo.png",
		"128": "logo.png"
	},
	"content_security_policy": "script-src 'self'; object-src 'self'",
	"browser_action": {
		"default_icon": "logo.png",
		"default_title": "Nyxium",
		"default_popup": "popup.html"
	},
	"permissions": [
		"http://nyx.cz/*",
		"http://www.nyx.cz/*",
		"https://nyx.cz/*",
		"https://www.nyx.cz/*",
		"tabs"
	],
	"background": {
		"scripts": [ "jquery-1.8.1.min.js", "background.js" ]
	},
	"options_page": "options.html"
}
